/* Style the api docs page making the iframe it contains legible */
.theme-container.api-docs .page {
    padding-bottom: 0px;
}
.theme-container.api-docs .page .content {
    max-width: 1200px;
    padding: 0px;
    height: calc(100vh - 3.6rem);
}
.theme-container.api-docs .page footer {
    display: none;
}
.api-docs-frame {
    border: 0px;
    width: 100%;
    height: 100%;
}
